<link href="medicineTrackingStyle.css" rel="stylesheet" type="text/css">

<header>
    <div id="blue-rect"></div>
        <h1 id="mediminder-title">MediMinder</h1>
        <h2 id="med-track-title">Medicine Tracking</h2>
</header>
<main>
    {{!-- Should have an autocomplete dropdown of medications--}}
    <div id="med-name-div">
        <label id="med-name-label" for="med-name">Medication Name</label><br />
        <input type="text" id="med-name" name="med-name" />
        <div id="drop-down-list" class="hidden"></div>
    </div><br />

    <div>
        <label id="medication-times-label" for="medication-times">When do you take it?</label><br />
        <select id="medication-times">
            <option value="default">---</option>
            <option value="Upon waking up">Upon waking up</option>
            <option value="With breakfast">With breakfast</option>
            <option value="With Lunch">With Lunch</option>
            <option value="With Dinner">With Dinner</option>
            <option value="At Bedtime">At Bedtime</option>
        </select>
    </div><br/>

    <div id="start-end-div">
        <div id="start-div">
            <label id="start-date-label" for="start-date">Start date</label>
            <input type="date" id="start-date" name="start-date" />
        </div>
        <div id="end-div">
            <label id="end-date-label" for="end-date">End date</label>
            <input type="date" id="end-date" name="end-date" />
        </div>
    </div>

    <section id="checkbox-section">
        <div id="checkbox-section-left">
            <input type="checkbox" id="daily" name="daily" />
            <label for="daily">Daily</label><br />
            <input type="checkbox" id="every-other" name="every-other" />
            <label for="every-other">Every Other Day</label>
            <p id="custom-schedule">+ Custom Schedule</p><br />
        </div>
            {{!-- Slider element for notifications needs CSS to create the actual slider from a checkbox input --}}
        <div id="checkbox-section-right">
            <input type="checkbox" id="notifications" name="notifications" />
            <label for="notifications">Notifications</label><br />
        </div>

    </section>

    <button id="save">SAVE</button>
</main>

<script src="./js/med-options.js"></script>
<script src="./js/medicine-tracking.js"></script>